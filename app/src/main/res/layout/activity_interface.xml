<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".InterfaceActivity">
    <fragment
        android:id="@+id/nav_host_fragment_activity_interface"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toBottomOf="@id/guideH90"
        app:navGraph="@navigation/interface_navigation" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        >


        <Button
            android:id="@+id/blue_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blue"
            />


        <Button
            android:id="@+id/white_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="white"
            />


        <Button
            android:id="@+id/black_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="black"
            />
    </LinearLayout>


</LinearLayout>