<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.GalleryFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideH90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.93"
        android:orientation="horizontal"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideH50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="horizontal"
        />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideH70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.67" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideH80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.8"
        android:orientation="horizontal"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideH10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.05"
        android:orientation="horizontal"
        />

   


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideH40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.4"
        android:orientation="horizontal"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideH60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.6"
        android:orientation="horizontal"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideH35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.35"
        android:orientation="horizontal"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideV10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.1"
        android:orientation="vertical"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideV05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.05"
        android:orientation="vertical"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideV90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.9"
        android:orientation="vertical"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideV95"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.95"
        android:orientation="vertical"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideV35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.35"
        android:orientation="vertical"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideV65"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.65"
        android:orientation="vertical"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideV50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="vertical"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideV375"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.375"
        android:orientation="vertical"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideV625"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.625"
        android:orientation="vertical"
        />
    
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideV05"
        app:layout_constraintEnd_toEndOf="@id/guideV95"
        app:layout_constraintBottom_toBottomOf="@id/guideH50"
        android:background="#1677c5"
        />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/main_image"
        android:layout_width="0dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/white"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/guideH10"
        app:layout_constraintStart_toStartOf="@id/guideV10"
        app:layout_constraintEnd_toEndOf="@id/guideV90"
        app:layout_constraintBottom_toTopOf="@id/guideH35"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_2"
                android:scaleType="fitXY"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/first_vertical_card"
        android:layout_width="0dp"
        app:cardCornerRadius="5dp"
        android:layout_height="0dp"
        app:strokeColor="#FFC300"
        app:cardBackgroundColor="#FFC300"
        app:cardElevation="10dp"
        app:layout_constraintTop_toTopOf="@id/guideH40"
        app:layout_constraintStart_toStartOf="@id/guideV10"
        app:layout_constraintEnd_toEndOf="@id/guideV35"
        app:layout_constraintBottom_toTopOf="@id/guideH60"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_small_50_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.5"
                android:orientation="horizontal"
                />



                    <ImageView
                        android:id="@+id/iv1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@+id/guide_small_50_1"
                        android:src="@drawable/baseline_view_sidebar_24"
                        android:layout_gravity="center"
                        />



            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv1"
                android:layout_gravity="left|center"
                android:textColor="@color/white"
                android:text="Mark"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv1"
                android:layout_gravity="left|center"
                android:textColor="@color/white"
                android:text="Attendance"
                android:layout_marginBottom="20dp"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/second_vertical_card"
        android:layout_width="0dp"
        app:cardCornerRadius="5dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="#FF0000"
        app:strokeColor="#FF0000"
        app:cardElevation="10dp"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toTopOf="@id/guideH40"
        app:layout_constraintStart_toStartOf="@id/guideV375"
        app:layout_constraintEnd_toEndOf="@id/guideV625"
        app:layout_constraintBottom_toTopOf="@id/guideH60"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_small_50_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.5"
                android:orientation="horizontal"
                />



            <ImageView
                android:id="@+id/iv3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/guide_small_50_3"
                android:src="@drawable/baseline_view_list_24"
                android:layout_gravity="center"
                />



            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv3"
                android:layout_gravity="left|center"
                android:textColor="@color/white"
                android:text="Show"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv3"
                android:layout_gravity="left|center"
                android:textColor="@color/white"
                android:text="Attendance"
                android:layout_marginBottom="20dp"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/third_vertical_card"
        android:layout_width="0dp"
        app:cardCornerRadius="5dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="#ADD8E6"
        app:cardElevation="10dp"
        app:layout_constraintTop_toTopOf="@id/guideH40"
        app:layout_constraintStart_toStartOf="@id/guideV65"
        app:layout_constraintEnd_toEndOf="@id/guideV90"
        app:layout_constraintBottom_toTopOf="@id/guideH60"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_small_50_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.5"
                android:orientation="horizontal"
                />



            <ImageView
                android:id="@+id/iv2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/guide_small_50_2"
                android:src="@drawable/baseline_menu_book_24"
                android:layout_gravity="center"
                />



            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv2"
                android:layout_gravity="left|center"
                android:textColor="@color/white"
                android:text="Home"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv2"
                android:layout_gravity="left|center"
                android:textColor="@color/white"
                android:text="Work"
                android:layout_marginBottom="20dp"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/one_by_one_card"
        android:layout_width="0dp"
        app:cardCornerRadius="10dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="#Fadadd"
        app:layout_constraintTop_toTopOf="@id/guideH70"
        app:layout_constraintStart_toStartOf="@id/guideV10"
        android:layout_marginEnd="10dp"
        app:strokeWidth="0dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="@id/guideV50"
        app:layout_constraintBottom_toTopOf="@id/guideH80"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:text="Gallery"
                android:textAlignment="center"
                android:textColor="#e75480"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_menu_gallery" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/one_by_two_card"
        android:layout_width="0dp"
        app:cardCornerRadius="10dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="#e8ebe0"
        app:layout_constraintTop_toTopOf="@id/guideH70"
        app:layout_constraintStart_toStartOf="@id/guideV50"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        app:strokeWidth="0dp"
        app:layout_constraintEnd_toEndOf="@id/guideV90"
        app:layout_constraintBottom_toTopOf="@id/guideH80"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginStart="10dp"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="#83c760"
                android:layout_weight="1"
                android:text="Notice"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/menu_book_green"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/two_by_one_card"
        android:layout_width="0dp"
        app:cardCornerRadius="10dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="#e5f3fd"
        app:layout_constraintTop_toTopOf="@id/guideH80"
        app:layout_constraintStart_toStartOf="@id/guideV10"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        app:strokeWidth="0dp"
        app:layout_constraintEnd_toEndOf="@id/guideV50"
        app:layout_constraintBottom_toTopOf="@id/guideH90"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textColor="#000080"
                android:text="Pay fee"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/baseline_attach_money_24"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/two_by_two_card"
        android:layout_width="0dp"
        app:cardCornerRadius="10dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="#fae886"
        app:layout_constraintTop_toTopOf="@id/guideH80"
        app:layout_constraintStart_toStartOf="@id/guideV50"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:strokeWidth="0dp"
        app:layout_constraintEnd_toEndOf="@id/guideV90"
        app:layout_constraintBottom_toTopOf="@id/guideH90"
        >
        
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="horizontal"
            >
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:textColor="#ffb343"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="About"
                />
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_menu_camera"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    
    

</androidx.constraintlayout.widget.ConstraintLayout>